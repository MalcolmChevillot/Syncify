generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  spotifyId   String   @unique
  displayName String?
  profilePic  String?
  createdAt   DateTime @default(now())
  
  friends     Friend[]       @relation("UserFriends")
  syncLists   SyncList[]     @relation("UserSyncLists")
  points      Point[]        @relation("UserPoints")
  friendOf    Friend[]       @relation("FriendsUser")
  syncListOf  SyncList[]     @relation("SyncListFriend")
  pointsOf    Point[]        @relation("PointsUser")
  addedTracks SyncListTrack[]
}

model Friend {
  id        Int      @id @default(autoincrement())
  user      User     @relation("FriendsUser", fields: [userId], references: [id])
  userId    Int
  friend    User     @relation("UserFriends", fields: [friendId], references: [id])
  friendId  Int
  status    String   @default("pending")
  createdAt DateTime @default(now())

  @@unique([userId, friendId])
}

model SyncList {
  id        Int      @id @default(autoincrement())
  name      String
  creator   User     @relation("UserSyncLists", fields: [creatorId], references: [id])
  creatorId Int
  friend    User     @relation("SyncListFriend", fields: [friendId], references: [id])
  friendId  Int
  createdAt DateTime @default(now())
  
  tracks    SyncListTrack[]
}

model SyncListTrack {
  id         Int      @id @default(autoincrement())
  syncList   SyncList @relation(fields: [syncListId], references: [id])
  syncListId Int
  trackId    String
  addedBy    User     @relation(fields: [addedById], references: [id])
  addedById  Int
  addedAt    DateTime @default(now())
}

model Point {
  id         Int      @id @default(autoincrement())
  user       User     @relation("PointsUser", fields: [userId], references: [id])
  userId     Int
  friend     User     @relation("UserPoints", fields: [friendId], references: [id])
  friendId   Int
  points     Int      @default(0)
  lastUpdate DateTime @default(now())

  @@unique([userId, friendId])
}
